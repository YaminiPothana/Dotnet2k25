
@{
    ViewData["Title"] = "Welcome to YRCTC";
}

<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        background-color:white;
        padding: 20px;
    }

    h2 {
        color: darkgrey;
    }

    .container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: auto;
    }

    label {
        font-size: 16px;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 8px;
        margin: 10px 0;
        border: 1px solid dotted;
        border-radius: 5px;
        font-size: 16px;
    }

    button {
        background-color: forestgreen;
        color: white;
        padding: 10px;
        border: none;
        width: 100%;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
    }

        button:hover {
            background-color: lawngreen;
        }

    .message {
        color: red;
        font-weight: bold;
        font-family: Candara: 10px;
    }
</style>

<div class="container">
    <h2>Welcome to YRCTC</h2>
    <p>Enter the number of tickets to book:</p>

    <form method="post" asp-action="BookTickets">
        <label>Number of Tickets:</label>
        <input type="number" id="ticketCount" name="ticketCount" min="0" max="6" required>

        <button type="submit" class="btn btn-success">Book Tickets</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <p class="message">@TempData["Message"]</p>
        <script>
            alert("@TempData["Message"]");
        </script>
    }
</div>
